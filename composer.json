{
  "name": "resilience4u/r4php",
  "description": "Resilience toolkit (Retry, CircuitBreaker, RateLimiter, etc.) com DX unificada, embrulhando libs maduras.",
  "type": "library",
  "license": "Apache-2.0",
  "require": {
    "php": "^8.1",
    "ackintosh/ganesha": "^1.0",
    "symfony/rate-limiter": "^6.4 || ^7.0",
    "stechstudio/backoff": "^1.6",
    "guzzlehttp/guzzle": "^7.9",
    "resilience4u/r4contracts": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --colors=always",
    "stan": "phpstan analyse -c phpstan.neon",
    "fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --ansi"
  },
  "autoload": {
    "psr-4": {
      "Resiliente\\R4PHP\\": "src/"
    }
  }
}
